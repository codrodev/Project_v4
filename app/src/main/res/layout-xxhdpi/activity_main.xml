<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="activityMainVM"
            type="dm.sime.com.kharetati.view.viewModels.MainViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activities.MainActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="locale"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/headerLayout"
                android:background="@drawable/maroon_overlay_bg">
                <LinearLayout
                    android:id="@+id/layoutProfile"
                    android:layout_marginStart="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"

                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="26dp"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="center_vertical|end"
                        android:id="@+id/backButton"
                        android:visibility="gone"
                        android:src="@drawable/back"/>
                    <TextView
                        android:id="@+id/txtWelcome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/dubai_font"
                        android:gravity="start|center_vertical"
                        android:text="@string/title_welcome"
                        android:lineHeight="35dp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textFontWeight="1000"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/profileUsername"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="22dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/imgRound"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/avatar"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtUsername"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="10dp"
                            android:fontFamily="@font/dubai_font"
                            android:gravity="center_vertical"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:singleLine="false"
                            android:maxLines="2"
                            android:textStyle="normal" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:id="@+id/layoutlastlogin"
                android:orientation="horizontal"
                android:background="#830823">
                <TextView
                    style="@style/font_medium_bold"
                    android:id="@+id/lstLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:textSize="15sp"
                    android:text="@string/lastlogin"
                    android:layout_gravity="start|center_vertical"
                    android:layoutDirection="locale"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textFontWeight="1000"/>
                <TextView
                    android:id="@+id/txtLastLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginEnd="5dp"
                    android:gravity="start|center_vertical"
                    android:layoutDirection="locale"
                    android:textDirection="locale"
                    android:textAlignment="viewStart"
                    android:fontFamily="@font/dubai_font"
                    android:textColor="@color/white" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/ui_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="48dp"
                android:layout_below="@+id/layoutProfile"
                android:background="@color/white"
                android:layoutDirection="locale" />
        </LinearLayout>
        <dm.sime.com.kharetati.view.customview.meowbottomnavigation.MeowBottomNavigation
            android:id="@+id/customBottomBar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layoutDirection="locale"
            android:background="@color/transparent"
            app:mbn_circleColor="@color/maroon_light"
            app:mbn_backgroundBottomColor="@color/maroon_light"
            app:mbn_rippleColor="#2f424242"
            app:mbn_selectedIconColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:mbn_defaultIconColor="@color/white"
            app:mbn_shadowColor="#1f212121"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
