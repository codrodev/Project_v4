<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="fragmentDashboardVM"
            type="dm.sime.com.kharetati.view.viewModels.DashboardViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/layoutParent"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:background="#830823"
            android:gravity="center"
            android:weightSum="2">
            <androidx.cardview.widget.CardView
                android:id="@+id/layoutCardMyMap"
                android:layout_width="126dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                app:cardCornerRadius="16dp"
                android:elevation="10dp">
                <LinearLayout
                    android:id="@+id/layoutMyMap"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/capsule_white_bg"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgMyMap"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:gravity="center"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/txtMyMap"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/dubai_font"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:paddingStart="6dp"
                        android:textAlignment="viewStart"
                        android:textStyle="bold"
                        android:textFontWeight="500"
                        android:text="@string/mymaps"
                        android:textColor="@color/white"
                        android:textSize="13sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="126dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                app:cardCornerRadius="16dp"
                android:elevation="10dp">
                <LinearLayout
                    android:id="@+id/layoutBookmark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/capsule_white_bg"
                    android:layout_gravity="center_vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imgBookMark"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:gravity="center"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/txtBookmark"
                        android:layout_width="wrap_content"
                        android:textSize="13sp"
                        android:layout_height="match_parent"
                        android:text="@string/bookmark"
                        android:textStyle="bold"
                        android:textFontWeight="500"
                        android:textAlignment="viewStart"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:paddingStart="6dp"
                        android:fontFamily="@font/dubai_font"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <ImageView
                android:layout_width="32dp"
                android:layout_height="40dp"
                android:src="@drawable/sort_icon"
                android:id="@+id/imgSort"
                android:visibility="gone"
                android:layout_weight="0.2"/>
        </LinearLayout>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPagerCreatePackage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="40dp"/>
    </LinearLayout>
</layout>