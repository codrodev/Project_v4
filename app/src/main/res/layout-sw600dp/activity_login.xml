<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="activityLoginVM"
            type="dm.sime.com.kharetati.view.viewModels.LoginViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layoutRoot"
        android:orientation="vertical"
        tools:context=".view.activities.LoginActivity">

        <ImageView
            android:id="@+id/imgBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@mipmap/building"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:layout_width="@dimen/splash_logo_width"
            android:layout_height="@dimen/splash_logo_height"
            android:id="@+id/logoSplash"
            android:scaleType="centerCrop"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="@dimen/splash_logo_margin_top"
            android:layout_marginBottom="@dimen/splash_logo_margin_bottom"
            android:layout_marginRight="@dimen/splash_logo_margin_right"
            android:src="@drawable/logo_splash"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:textSize="14sp"
            android:elevation="20dp"
            android:id="@+id/copyright_arabic"
            android:layout_marginTop="-25dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/dubai_font"
            android:textAlignment="center"
            android:textColor="@color/maroon_light"
            android:text="@string/copyright"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:textSize="14sp"
            android:elevation="20dp"
            android:id="@+id/copyright_english"
            android:layout_marginTop="-48dp"
            android:layout_marginBottom="23dp"
            android:fontFamily="@font/dubai_font"
            android:textAlignment="center"
            android:textColor="@color/maroon_light"
            android:text="حقوق الطبع والنشر © بلدية دبي 2020, جميع الحقوق محفوظة"
            />


        <dm.sime.com.kharetati.view.customview.SlantView
            android:id="@+id/slantViewLoginHeader"
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:layout_height="350dp"
            android:layout_gravity="start|center_horizontal"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:id="@+id/layoutLogo">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="107dp"
                android:layout_height="102dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/kharetati_white"
                app:layout_constraintBottom_toBottomOf="@+id/imgBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/slantViewLoginHeader"
                app:layout_constraintVertical_bias="0.0" />

            <dm.sime.com.kharetati.view.customview.SwitchCompatEx
                android:id="@+id/switchLanguage"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:minHeight="40dp"
                android:layoutDirection="ltr"
                android:fontFamily="@font/dubai_font"
                android:visibility="gone"
                android:textOn="Arabic"
                android:textOff="English"
                app:layout_constraintBottom_toTopOf="@+id/cardLogin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.511"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:layout_constraintVertical_bias="0.01"
                app:switchMinWidth="100dp" />


        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/slantViewLoginHeader"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/layoutParentLoginContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:id="@+id/imageDubaiID"
                    android:layout_marginStart="16dp"

                    android:layout_marginEnd="16dp"
                    android:src="@drawable/myid_logo" />

            <LinearLayout
                android:id="@+id/loginContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutDirection="locale"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/edit_drawable_height"
                        android:layout_height="@dimen/edit_drawable_height"
                        android:src="@drawable/user_dark"
                        android:scaleType="centerInside"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="4dp"/>
                    <AutoCompleteTextView
                        android:id="@+id/editUserName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext_height"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:layoutDirection="locale"
                        android:layout_marginBottom="4dp"
                        android:background="@color/white"
                        android:clickable="true"
                        android:ems="10"
                        android:singleLine="true"
                        android:focusable="true"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:hint="@string/username"
                        android:fontFamily="@font/dubai_font"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="8dp"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/login_font_size"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="-8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/light_gray"/>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="locale"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/edit_drawable_height"
                    android:layout_height="@dimen/edit_drawable_height"
                    android:scaleType="centerInside"
                    android:src="@drawable/password_dark_2"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="4dp"/>

                <EditText
                    android:id="@+id/editPassword"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height"
                    android:textAlignment="center"
                    android:gravity="center_vertical|center_horizontal"
                    android:layoutDirection="locale"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:singleLine="true"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/dubai_font"
                    android:layout_marginBottom="4dp"
                    android:background="@color/white"
                    android:ems="10"
                    android:hint="@string/password"
                    android:textSize="@dimen/login_font_size"
                    android:inputType="textWebPassword"
                    android:paddingLeft="8dp"/>

            </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="-8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/light_gray"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layoutDirection="locale"
                    android:weightSum="1"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/layoutRememberMe"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">
                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:clickable="true"
                        android:gravity="center_vertical|start"
                        android:textColor="@color/textColor"
                        android:id="@+id/chkRememberMe"
                        android:fontFamily="@font/dubai_font"
                        android:focusable="false"
                        android:layout_weight=".5"
                        android:textSize="13sp"
                        android:text="@string/rememberme" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/txtForgotPassword"
                        android:layout_gravity="end"
                        android:gravity="center_vertical|end"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:singleLine="false"
                        android:maxLines="2"
                        android:layout_weight=".5"
                        android:fontFamily="@font/dubai_font"
                        android:text="@string/forgot_username_password"
                        android:textAlignment="viewEnd"
                        android:textSize="13sp"
                        android:textColor="@color/textColor" />

                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="4dp"
                    android:id="@+id/btnLogin"
                    android:fontFamily="@font/dubai_font"
                    android:background="@drawable/gradient_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="@string/login"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/login_font_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/layoutOR"
                    android:orientation="horizontal">

<!--
                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.498"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
-->

                    <TextView
                        android:id="@+id/txtOR"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dubai_font"
                        android:layout_marginBottom="4dp"
                        android:text="@string/or"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/login_font_size" />
                </LinearLayout>
                <!--<Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="4dp"
                    android:visibility="gone"
                    android:background="@drawable/maroon_border_background"
                    android:id="@+id/btnSignUp"
                    android:fontFamily="@font/dubai_font"
                    android:text="@string/createAccount"
                    android:textAllCaps="false"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/login_font_size" />-->
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="4dp"
                android:id="@+id/txtGuest"
                android:fontFamily="@font/dubai_font"
                android:text="@string/signin_as_guest"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="@dimen/login_font_size" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutEnableUAEPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:visibility="gone"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="4dp"
                    android:id="@+id/txtEnableUAEPass"
                    android:singleLine="false"
                    android:maxLines="2"
                    android:fontFamily="@font/dubai_font"
                    android:text="@string/login_uaepass"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/login_font_size" />

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="120dp"
                    android:id="@+id/imgEnableUAEPass"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/uaepass" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/layoutUAEPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="4dp"
                android:id="@+id/txtUAEPass"
                android:singleLine="false"
                android:maxLines="2"
                android:fontFamily="@font/dubai_font"
                android:text="@string/login_uaepass"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="@dimen/login_font_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgUAEPass"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/uaepass" />
        </LinearLayout>

        <!--<ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="180dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />-->



    </LinearLayout>
</layout>