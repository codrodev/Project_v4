<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:height="45dp" android:width="46dp"        >
        <rotate
            android:fromDegrees="0" android:toDegrees="0"
            >
            <shape
                android:shape="rectangle" >
                <solid
                    android:color="@android:color/transparent" />
            </shape>
        </rotate>
    </item>
    <item android:height="37dp" android:width="37dp" android:left="5dp" android:top="7dp"
        >
        <rotate
            android:fromDegrees="45" android:toDegrees="45"
            >
            <shape
                android:shape="rectangle" >
                <solid
                    android:color="#b71e3e" />
                <corners android:bottomRightRadius="10dp"
                    android:bottomLeftRadius="10dp"
                    android:topLeftRadius="10dp"
                    android:topRightRadius="10dp" />
            </shape>
        </rotate>
    </item>
</layer-list>