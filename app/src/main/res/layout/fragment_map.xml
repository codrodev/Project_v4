<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="fragmentMapVM"
            type="dm.sime.com.kharetati.view.viewModels.MapViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.esri.arcgisruntime.mapping.view.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            mapoptions.ZoomLevel="16"
            mapoptions.center="25.276987, 55.296249"/>
        <!--<com.esri.android.map.MapView
            android:id="@+id/mapView"
            mapoptions.ZoomLevel="16"
            mapoptions.center="25.276987, 55.296249"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="20dp"
            android:layout_marginTop="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:background="@color/white"
                android:weightSum="2"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginVertical="10dp"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/imgBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="left|center_vertical"
                        android:src="@drawable/ic_arrow_back_24dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginVertical="10dp"
                    android:weightSum="4">
                    <ImageView
                        android:id="@+id/imgLayer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:src="@drawable/ic_layers_24dp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/imgBookmark"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="left|center_vertical"
                        android:src="@drawable/ic_book_black_24dp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/imgRecenter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:src="@drawable/ic_center_focus_strong_24dp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/imgMakani"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="left|center_vertical"
                        android:src="@drawable/makani"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>