<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="fragmentBottomSheetMapFunction"
            type="dm.sime.com.kharetati.view.viewModels.MapFunctionBottomSheetViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/maroon_dark"
        android:orientation="vertical">
        <View
            android:id="@+id/topView"
            android:layout_margin="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="200dp"
            android:layout_height="2dp"
            android:background="@color/white"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:setStaggeredAdapter="@{fragmentBottomSheetMapFunction.getFunctionsOnMapAdapter()}"/>
    </LinearLayout>
</layout>