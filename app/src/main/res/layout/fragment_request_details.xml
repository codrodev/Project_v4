<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="48dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textDirection="locale"
        android:background="@color/maroon_light">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:id="@+id/back"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:paddingStart="-48dp"
            android:background="@color/maroon_light"
            android:text="@string/request_details"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_margin="15dp"
        android:layout_marginLeft="15dp">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border_top"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:hint="@string/request_num"
            android:layout_gravity="start"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#aaaaaa"
            android:textAlignment="viewStart"
            android:gravity="start"
             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text=":"
            android:textSize="16sp"

            android:backgroundTint="#aaaaaa"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tvRequestNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/request_num"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#aaaaaa"
            android:paddingStart="5dp"
            android:textAlignment="viewStart"
            android:paddingLeft="5dp"
            android:gravity="start" />


    </LinearLayout>
        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#aaaaaa"
            />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border_top"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:hint="@string/parcelid"
                android:layout_gravity="start"
                android:textSize="16sp"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#aaaaaa"
                android:gravity="start"
                android:textAlignment="viewStart"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text=":"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#aaaaaa"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tvParcelId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/parcelid"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:textSize="16sp"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#aaaaaa"
                android:textAlignment="viewStart"
                android:gravity="start" />
        </LinearLayout>
        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#aaaaaa"
            />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border_top"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:hint="@string/voucher_num"
                android:layout_gravity="start"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#aaaaaa"
                android:gravity="start"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:textAlignment="viewStart"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text=":"
                android:textSize="16sp"
                android:backgroundTint="#aaaaaa"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tvVoucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/voucher_num"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:textSize="16sp"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#aaaaaa"
                android:textAlignment="viewStart"
                android:gravity="start" />
        </LinearLayout>
        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#aaaaaa"
            />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border_top"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:hint="@string/amount"
                android:layout_gravity="start"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#aaaaaa"
                android:gravity="start"
                android:paddingStart="5dp"
                android:textAlignment="viewStart"
                android:paddingLeft="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text=":"
                android:textSize="16sp"
                android:backgroundTint="#aaaaaa"
                android:gravity="start"
                />
            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/amount"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#aaaaaa"
                android:gravity="start"
                android:paddingStart="5dp"
                android:textAlignment="viewStart"
                android:paddingLeft="5dp"/>


        </LinearLayout>
        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#aaaaaa"
            />-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginTop="30dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:text="@string/payment_channels"
            android:layout_marginLeft="5dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="locale"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="166dp"
                    android:layout_height="42dp"
                    android:src="@drawable/adhog"/>
                <ImageView
                    android:layout_width="166dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="42dp"
                    android:src="@drawable/al_ansari"/>
                <ImageView
                    android:layout_width="166dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="42dp"
                    android:src="@drawable/dubai_municipality"/>
            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:textSize="16sp"
                android:layout_margin="16dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/payNow"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/gradient_background"
                android:text="@string/pay_now"
                android:textColor="@color/white"
                android:textFontWeight="800"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textSize="14sp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#c35563"
            android:text="@string/payment_warning"
            android:layout_marginLeft="5dp" />

    </LinearLayout>
    <Button
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:background="@drawable/gradient_background"
        android:text="@string/done"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:id="@+id/done"
        android:textColor="@color/white"
        android:layout_gravity="bottom|center"
        />

</LinearLayout>
</ScrollView>