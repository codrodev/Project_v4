<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragmentContactusVM"
            type="dm.sime.com.kharetati.view.viewModels.ContactusViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_about_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="48dp"
                android:visibility="gone"
                android:background="@drawable/maroon_overlay_bg"
                android:gravity="center"
                android:text="@string/menu_contact_us"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="48dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="0dp"
                    android:weightSum="1">

                <LinearLayout
                    android:id="@+id/layoutMap"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:orientation="horizontal">

                    <com.esri.arcgisruntime.mapping.view.MapView
                        android:id="@+id/mapContactUs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LLcontact_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:minHeight="100dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:id="@+id/LLfindus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginEnd="16dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginRight="16dp"
                                android:contentDescription="@string/you_are_about_to_call"
                                android:src="@drawable/address_512" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/TVfindus"
                                    android:text="@string/finddus"
                                    android:textColor="@color/contact_text_color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp" />

                                <TextView
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/contact_text_color"
                                    android:text="@string/alriga"
                                    android:textAlignment="gravity"
                                     />


                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvDevider"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#b6b6b6" />
                        <LinearLayout
                            android:id="@+id/LLPhoneContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginEnd="16dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginRight="16dp"
                                android:padding="2dp"
                                android:contentDescription="@string/you_are_about_to_call"
                                android:src="@drawable/call_512" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="vertical">



                                <TextView
                                    android:text="@string/callus"
                                    android:textColor="@color/contact_text_color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp" />
                                <TextView
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/contact_text_color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/phone"
                                    android:id="@+id/TVDMPhoneNumber"
                                    android:textAlignment="gravity"
                                    />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView30"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray" />




                    <LinearLayout
                        android:id="@+id/layout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:minHeight="100dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:id="@+id/LLDMWebsite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:layout_marginRight="16dp"
                                android:contentDescription="@string/Website"
                                android:src="@drawable/web_512" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:textColor="@color/contact_text_color"
                                    android:text="@string/visitus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp" />
                                <TextView
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/Website"
                                    android:textColor="@color/contact_text_color"
                                    android:id="@+id/TVDMWebsite"
                                     />


                            </LinearLayout>

                        </LinearLayout>
                        <TextView
                            android:id="@+id/tvDevider2"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#b6b6b6" />

                        <LinearLayout
                            android:id="@+id/LLDMEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginEnd="16dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginRight="16dp"
                                android:contentDescription="@string/email"
                                android:src="@drawable/email_512" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView

                                    android:text="@string/mailus"
                                    android:textColor="@color/contact_text_color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp" />
                                <TextView
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/email2"
                                    android:id="@+id/TVDMEmail"
                                    android:textColor="@color/contact_text_color" />


                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

