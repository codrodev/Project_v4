                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray" />
                    <LinearLayout
                        android:id="@+id/layout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="100dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:id="@+id/LLDMFeedback"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginEnd="16dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginRight="16dp"
                                android:contentDescription="@string/send_your_feedback_about_the_app"
                                android:src="@drawable/feedback_512" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:textColor="@color/contact_text_color"
                                    android:text="@string/sendus" />

                                <TextView
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/feedback"

                                    android:textColor="@color/contact_text_color"/>


                            </LinearLayout>

                        </LinearLayout>
                        <TextView
                            android:id="@+id/tvDevider3"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#b6b6b6" />
                        <LinearLayout
                            android:id="@+id/LLDMLiveChat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:visibility="invisible"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:layout_marginRight="16dp"
                                android:contentDescription="@string/Live_chat_with_our_call_center"
                                android:src="@drawable/chat_512" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/contact_text_color"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:text="@string/reachus" />
                                <TextView
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/Chat"
                                    android:textColor="@color/contact_text_color" />


                            </LinearLayout>

                        </LinearLayout>



                    </LinearLayout>





                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:weightSum="4"
                            android:layout_marginHorizontal="15dp"
                            android:gravity="center"

                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgFacebook"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:layout_margin="10dp"
                                android:contentDescription="@string/facebook"
                                app:srcCompat="@drawable/facebook_512" />

                            <ImageView
                                android:id="@+id/imgTwitter"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:contentDescription="@string/twitter"
                                app:srcCompat="@drawable/twitter_512" />

                            <ImageView
                                android:id="@+id/imgInstagram"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:contentDescription="@string/instagram"
                                app:srcCompat="@drawable/insta_512" />

                            <ImageView
                                android:id="@+id/imgYoutube"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:contentDescription="@string/youtube"
                                app:srcCompat="@drawable/youtube_512" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

