<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="fragmentAttachmentVM"
            type="dm.sime.com.kharetati.view.viewModels.AttachmentViewModel" />
    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/rootView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="locale"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardPassportPersonal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:clickable="true"
                android:elevation="15dp"
                android:visibility="visible"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/font_large_bold"
                            android:id="@+id/txtPassport"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:text="passport"
                            android:layout_gravity="center_vertical" />
                        <TextView
                            style="@style/font_medium_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:text="(personal info page)"
                            android:layout_marginHorizontal="5dp"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/cardview_shadow_start_color"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp">
                        <ImageView
                            android:id="@+id/imgPassportPersonal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_linked_camera_24dp"/>

                        <LinearLayout
                            android:id="@+id/layoutDocPassportPersonal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnPassportPersonalView"
                                android:layout_width="77dp"
                                android:layout_height="25dp"
                                android:text="view"
                                android:background="@color/light_green"
                                android:textAllCaps="false"
                                android:textColor="@color/white" />
                            <Button
                                android:id="@+id/btnPassportPersonalChange"
                                android:layout_width="77dp"
                                android:layout_height="25dp"
                                android:layout_marginTop="10dp"
                                android:text="change"
                                android:background="@color/light_blue"
                                android:textAllCaps="false"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardPassportVisa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:clickable="true"
                android:elevation="15dp"
                android:visibility="visible"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/font_large_bold"
                            android:id="@+id/txtPassportVisa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:text="passport"
                            android:layout_gravity="center_vertical" />
                        <TextView
                            style="@style/font_medium_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:text="(personal info page)"
                            android:layout_marginHorizontal="5dp"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/cardview_shadow_start_color"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp">
                        <ImageView
                            android:id="@+id/imgPassportVisa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_linked_camera_24dp"/>

                        <LinearLayout
                            android:id="@+id/layoutDocPassportVisa"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnPassportVisaView"
                                android:layout_width="77dp"
                                android:layout_height="25dp"
                                android:text="view"
                                android:background="@color/light_green"
                                android:textAllCaps="false"
                                android:textColor="@color/white" />
                            <Button
                                android:id="@+id/btnPassportVisaChange"
                                android:layout_width="77dp"
                                android:layout_height="25dp"
                                android:layout_marginTop="10dp"
                                android:text="change"
                                android:background="@color/light_blue"
                                android:textAllCaps="false"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardNOC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:clickable="true"
                android:elevation="15dp"
                android:visibility="visible"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/font_large_bold"
                            android:id="@+id/txtNOC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:text="NOC Letter"
                            android:layout_gravity="center_vertical" />
                        <TextView
                            style="@style/font_medium_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:text="(signed by owner)"
                            android:layout_marginHorizontal="5dp"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/cardview_shadow_start_color"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp">
                        <ImageView
                            android:id="@+id/imgNOC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_linked_camera_24dp"/>

                        <LinearLayout
                            android:id="@+id/layoutDocNOC"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnNOCView"
                                android:layout_width="77dp"
                                android:layout_height="25dp"
                                android:text="view"
                                android:background="@color/light_green"
                                android:textAllCaps="false"
                                android:textColor="@color/white" />
                            <Button
                                android:id="@+id/btnNOCChange"
                                android:layout_width="77dp"
                                android:layout_height="25dp"
                                android:layout_marginTop="10dp"
                                android:text="change"
                                android:background="@color/light_blue"
                                android:textAllCaps="false"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>