<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="fragmentHomeVM"
            type="dm.sime.com.kharetati.view.viewModels.HomeViewModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layoutDirection="locale"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.esri.arcgisruntime.mapping.view.MapView
            android:id="@+id/map"
            mapoptions.ZoomLevel="16"
            mapoptions.center="25.276987, 55.296249"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:visibility="gone" />
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/maroon_overlay_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_editor_absoluteX="0dp"
            app:layout_editor_absoluteY="0dp"/>

        <LinearLayout
            android:id="@+id/layoutNotification"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layoutDirection="locale"
            android:layout_marginTop="10dp"
            android:elevation="10dp"
            android:background="@color/transparent"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            app:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteX="140dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleNotification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:layoutDirection="locale" />
        </LinearLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="120dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/layoutNotification">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="fill_parent"
                    android:layout_height="275dp"
                    android:layout_marginHorizontal="10dp"
                    android:clipChildren="false"
                    android:visibility="visible"/>
                <LinearLayout
                    android:layout_below="@+id/viewPager"
                    android:id="@+id/layoutDots"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="15dp"
                    android:gravity="center"
                    android:orientation="horizontal"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/layoutRuntimeContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="100dp"
                    android:layout_below="@+id/layoutDots"
                    android:visibility="gone"
                    android:elevation="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="10dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp">
                        <LinearLayout
                            android:id="@+id/layoutHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/maroon_dark">
                            <TextView
                                android:id="@+id/txtSearchHeader"
                                style="@style/font_medium_bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/search"
                                android:textAlignment="viewStart"
                                android:textColor="@color/white"
                                android:layout_marginVertical="10dp"
                                android:layout_marginHorizontal="10dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="2dp"
                            android:background="@color/white"
                            android:layout_marginVertical="2dp"
                            android:orientation="vertical"
                            android:layout_below="@+id/layoutHeader">
                            <com.google.android.material.tabs.TabLayout
                                style="@style/font_medium_bold_tab"
                                android:id="@+id/tabRuntimeLayout"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                app:tabMode="fixed"
                                app:tabTextAppearance="@style/font_medium_bold_tab"
                                app:tabTextColor="@color/white"
                                app:tabBackground="@drawable/tab_color_selector"
                                android:layout_marginTop="15dp"
                                app:tabPaddingStart="0dp"
                                app:tabPaddingEnd="0dp"
                                app:tabIndicatorHeight="2dp"
                                android:layout_marginHorizontal="15dp"
                                app:tabGravity="fill"
                                app:tabMaxWidth="0dp"/>

                            <!--app:tabIndicatorColor="@color/maroon_dark"
                            app:tabIndicatorHeight="3dp"-->

                            <LinearLayout
                                android:id="@+id/layoutControlHeader"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginHorizontal="15dp"
                                android:layout_below="@+id/tabRuntimeLayout"
                                android:background="@color/extra_light_gray">
                                <TextView
                                    style="@style/font_medium_bold"
                                    android:id="@+id/txtHeader"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:textColor="@color/maroon_dark" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/runtimeParent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:orientation="vertical"/>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

        </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
        <!--<include layout="@layout/bottomsheet_webpage" />-->
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>