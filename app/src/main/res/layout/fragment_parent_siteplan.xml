<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="fragmentParentSiteplanVM"
            type="dm.sime.com.kharetati.view.viewModels.ParentSiteplanViewModel" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/container"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layoutDirection="locale"
        android:layout_height="match_parent">
        <!--<com.google.android.material.appbar.AppBarLayout
            android:id="@+id/layoutProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsableLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:layout_scrollFlags="noScroll"
                android:background="@drawable/maroon_overlay_bg">

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="locale"
            android:id="@+id/toolbarLayout"
            android:background="@drawable/maroon_overlay_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/toolbarll"
                android:layoutDirection="locale"
                android:weightSum="3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:layout_weight="1.25">
                    <ImageView
                        android:id="@+id/imgBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:layout_marginEnd="50dp"
                        android:gravity="start"
                        app:srcCompat="@drawable/ic_arrow_white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start|center_vertical"
                    android:layout_weight=".50">
                    <TextView
                        android:id="@+id/txtHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Sample"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="26dp"
                        android:textFontWeight="1000"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:visibility="invisible"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/imgHelp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="15dp"
                        android:layout_alignParentRight="true"
                        app:srcCompat="@drawable/ic_help" />
                </LinearLayout>
            </LinearLayout>

        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layoutDirection="locale"
            android:layout_gravity="center_horizontal"
            android:id="@+id/stepperHeader"
            android:background="@drawable/maroon_overlay_bg"
            android:layout_marginTop="50dp"
            app:layout_collapseMode="parallax">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="16dp"
                android:id="@+id/stepper"
                android:gravity="center"
                android:layout_gravity="center"

                android:weightSum="4">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:id="@+id/txtStepperOne"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:background="@drawable/stepper_background"
                        android:layout_centerVertical="true">
                        <TextView
                            style="@style/font_medium_bold"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="1"
                            android:textSize="12sp"
                            android:id="@+id/stepperOneText"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                    <View
                        android:layout_toRightOf="@+id/txtStepperOne"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:id="@+id/view1"
                        android:background="@color/light_blue"
                        android:layout_centerVertical="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/txtStepperTwo"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/stepper_background"
                        android:layout_centerVertical="true">
                        <TextView
                            style="@style/font_medium_bold"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="2"
                            android:textSize="12sp"
                            android:id="@+id/stepperTwoText"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="@color/white"/>
                    </LinearLayout>

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_toRightOf="@+id/txtStepperTwo"
                        android:background="@color/light_blue" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_weight="1">
                    <LinearLayout
                        android:id="@+id/txtStepperThree"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/stepper_background"
                        android:layout_centerVertical="true">
                        <TextView
                            style="@style/font_medium_bold"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="3"
                            android:textSize="12sp"
                            android:id="@+id/stepperThreeText"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                    <View
                        android:layout_toRightOf="@+id/txtStepperThree"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:id="@+id/view3"
                        android:layout_gravity="center_vertical"
                        android:background="@color/light_blue"
                        android:layout_centerVertical="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1.18"
                    android:id="@+id/stepperFourLayout"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:id="@+id/txtStepperFour"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/stepper_background"
                        android:layout_centerVertical="true">
                        <TextView
                            style="@style/font_medium_bold"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="4"
                            android:textSize="12sp"
                            android:id="@+id/stepperFourText"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                    <!--<View
                        android:layout_toRightOf="@+id/txtStepperOne"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/light_blue"
                        android:layout_centerVertical="true"/>-->
                </LinearLayout>
            </LinearLayout>
            <!--<com.google.android.material.tabs.TabLayout
                android:id="@+id/tabStepper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:tabIndicatorColor="#00ffff00"
                android:layout_margin="20dp">
                <com.google.android.material.tabs.TabItem
                    style="@style/font_large_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:tabBackground="@drawable/tab_color_selector"
                    android:textColor="@color/white"
                    android:text="1"/>
                <com.google.android.material.tabs.TabItem
                    style="@style/font_large_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="2"/>
                <com.google.android.material.tabs.TabItem
                    style="@style/font_large_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="1"/>
                <com.google.android.material.tabs.TabItem
                    style="@style/font_large_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="1"/>
            </com.google.android.material.tabs.TabLayout>-->
        </LinearLayout>
        <LinearLayout
            android:id="@+id/childFragmentContainer"
            android:layout_width="match_parent"
            android:layout_marginTop="110dp"
            android:orientation="vertical"
            android:layoutDirection="locale"
            android:layout_height="match_parent"
            android:layout_below="@+id/layoutProfile"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:elevation="30dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="locale"
                android:id="@+id/buttons"
                android:orientation="horizontal">
                <Button
                    android:fontFamily="@font/dubai_font"
                    android:textFontWeight="1000"
                    android:id="@+id/btnPrevious"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="1.75"
                    android:padding="2dp"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:background="@drawable/maroon_angle_background"
                    android:text="@string/previous"
                    android:textColor="@color/white"
                    />

                <Button
                    android:fontFamily="@font/dubai_font"
                    android:textFontWeight="1000"
                    android:id="@+id/btnNext"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="35dp"
                    android:layout_weight="1.75"
                    android:layout_marginVertical="2dp"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:padding="2dp"

                    android:layout_gravity="end|center_vertical"
                    android:layout_marginHorizontal="10dp"
                    android:textAllCaps="false"
                    android:background="@drawable/maroon_angle_background"
                    android:text="@string/next"
                    
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </FrameLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>