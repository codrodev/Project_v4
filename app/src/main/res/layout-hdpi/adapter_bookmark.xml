<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="position"
            type="java.lang.Integer" />
        <variable
            name="adapterBookmarkVM"
            type="dm.sime.com.kharetati.view.viewModels.BookmarkViewModel" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/transparent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mymap_container_bg"
            android:id="@+id/rowBookmark"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="9dp"
            android:paddingTop="4dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:paddingHorizontal="10dp"
                android:layout_marginTop="8dp"
                android:background="#fcfcfc">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/LBL_DATE_TIME"
                    android:visibility="invisible"
                    android:textSize="10sp"
                    android:textAlignment="viewStart"
                    android:fontFamily="@font/dubai_font"
                    android:textColor="#262424"
                    android:layout_marginStart="5dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="10sp"
                    android:id="@+id/dateBookmark"
                    android:layout_marginStart="5dp"
                    android:textColor="#262424"
                    android:fontFamily="@font/dubai_font"
                    android:layout_height="wrap_content"
                    android:text="Date here"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.00"
                android:background="#fcfcfc"
                android:paddingHorizontal="10dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:textSize="11sp"
                        android:textColor="@color/favoritesTextColor"
                        android:fontFamily="@font/dubai_font"
                        android:text="@string/plot_no"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/favoritesTextColor"
                        android:fontFamily="@font/dubai_font"
                        android:id="@+id/plotNo"
                        android:textSize="11sp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="5dp"
                        android:text='@{adapterBookmarkVM.getCurrentBookmark(position).ParcelNumber ?? ""}'/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="vertical"
                android:background="#fcfcfc">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.30">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="10dp"
                        android:layout_marginTop="2dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/community"
                            android:textSize="11sp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/favoritesTextColor"
                            android:fontFamily="@font/dubai_font"
                            android:layout_marginStart="5dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:textColor="@color/favoritesTextColor"
                            android:fontFamily="@font/dubai_font"
                            android:singleLine="true"
                            android:layout_marginStart="5dp"
                            android:id="@+id/community"
                            android:text='@{adapterBookmarkVM.getCurrentBookmark(position).Area ??  ""}'
                            android:textAlignment="viewStart"
                            /></LinearLayout>

                    <TextView
                        android:id="@+id/txtDescriptionEn"
                        android:textColor="@color/favoritesTextColor"
                        android:fontFamily="@font/dubai_font"
                        android:textSize="11sp"
                        android:text="desc"
                        android:layout_marginStart="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center|bottom"
                        android:weightSum="4">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:id="@+id/gotomap">
                            <ImageView
                                android:layout_width="19dp"
                                android:layout_height="23dp"
                                android:fontFamily="@font/dubai_font"
                                android:id="@+id/view"
                                android:padding="1dp"
                                android:src="@drawable/map_512"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="5dp"
                            android:gravity="center"
                            android:id="@+id/edit">
                            <ImageView
                                android:layout_width="19dp"
                                android:layout_height="23dp"
                                android:fontFamily="@font/dubai_font"
                                android:padding="1dp"
                                android:src="@drawable/edit_512"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/delete"
                            android:gravity="center"
                            android:layout_marginStart="5dp">
                            <ImageView
                                android:layout_width="19dp"
                                android:layout_height="23dp"
                                android:src="@drawable/delete_512"
                                android:fontFamily="@font/dubai_font"
                                android:padding="1dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/gotomakani"
                            android:gravity="center"
                            android:layout_marginStart="5dp">
                            <ImageView
                                android:layout_width="19dp"
                                android:layout_height="23dp"
                                android:src="@drawable/makani_512"
                                android:fontFamily="@font/dubai_font"
                                android:padding="1dp"/>
                        </LinearLayout>


                    </LinearLayout>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:drawableStart="@drawable/paymentcards"
                        android:textAllCaps="false"
                        android:drawablePadding="8dp"
                        android:layout_marginTop="2dp"
                        android:textAlignment="viewStart"
                        android:paddingStart="16dp"
                        android:visibility="gone"
                        android:fontFamily="@font/dubai_font"
                        android:id="@+id/siteplan_payButton"
                        android:background="#13a09a"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
